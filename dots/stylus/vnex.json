@-moz-document domain("vnexpress.net") {
body, header, nav, article,
.page-detail.top-detail, .container, .wrap-main-nav, .sub,
.inner-section-video:before, /*video bg*/
.wrap-all-menu /*main menu dropdown*/ {
    background: #000 !important;
}

/*top nav bar*/
.main-nav .parent {
    max-width: 100% !important;
    padding: 0 !important;
    margin: 0 !important;
}

p, div, section, body, a, li,
/*sub menu text*/
.main-nav .sub li a {
    color: #AAA !important;
}

/*main text*/
.Normal {
    text-rendering: optimizeLegibility !important;
}
.main-nav, /*nav*/
p.Image, /*Image text*/
.fck_detail /*main text*/ {
    font: 400 1.5em monospace !important;
}

/*Main article */
.container {
    max-width: 75vw !important;
}

/*to top button*/
#to_top {
    background: transparent !important;
    left: 8% !important;
    right: 0px !important;
}


.section-ads-top, #button-adblock,
.footer-content, #newsletters-details, /*subscribe*/
#box_comment, #box_comment_vne, /*comment*/
.inner-box-business, /*bottom white space*/
.social_pin /*Left nav button*/
{
    display: none !important;
}
}
